<h1>Veggie Burgers!</h1>

<div class="container">
<div class="row">
<div class="col-md-6">

<h2>Burgers to eat:</h2>

  <div>
    {{#each burgers}}
      {{#unless this.devoured}}
        <div>

          <form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
          <input input type="hidden" type="text" name="devoured" value={{this.devoured}}></input>
            <span class="burgerToEat"> {{this.burger_name}}</span>
            <button type="submit" class="burgerToEat"> Devour it! </button>
          </form>
        </div>
      {{/unless}}
    {{/each}}
  </div>
</div>

<div class="col-md-6">
<h2>Devoured Burgers:</h2>
  <div>
    {{#each burgers}}
      {{#if this.devoured}}
        <div class = "burgerDevoured">
          <div>
            {{this.burger_name}}
          </div>
        </div>
      {{/if}}
    {{/each}}
  </div>
</div>
</div>
</div> 

<h2>Add a Burger</h2>
<div class="row">
<form action="/burgers" method="POST" class="create-form">

    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="burger_name">


  <button type="submit">Add Burger</button>
</form>
</div>
